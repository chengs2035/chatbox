{
  "name": "Node.js Development",
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "VERSION": "18"
    }
  },
  "image": "node:18",
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash"
  },
  "extensions": [
    "dbaeumer.vscode-eslint",
    "esbenp.prettier-vscode",
    "ritwickdey.liveserver"
  ],
  "forwardPorts": [3000],
  "postCreateCommand": "npm install",
  "remoteUser": "node"
}
